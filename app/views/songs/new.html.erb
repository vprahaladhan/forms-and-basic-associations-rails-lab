<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />

  <%= f.label :genre_id %>
  <%= f.text_field :genre_id, list: "genre_id" %>
  <datalist name="genre_id" id="genre_id">
    <% Genre.all.each do |genre| %>
      <option value="<%= genre.id %>"><%= genre.name %></option>>
    <% end %>
  </datalist>
  <br />

  <input name="song[song_notes][]" id="song_notes_1" %>
  <input name="song[song_notes][]" id="song_notes_2" %>
  <input name="song[song_notes][]" id="song_notes_3" %>
  <input name="song[song_notes][]" id="song_notes_4" %>
  <input name="song[song_notes][]" id="song_notes_5" %>
  <br />

  <%= f.submit %>
<% end %>


